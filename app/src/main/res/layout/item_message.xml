<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item_message_linear_main"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:id="@+id/item_message_linear_destination">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/item_message_image_profile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_message_text_name"
            android:textSize="14dp"
            android:text="이름"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:id="@+id/item_message_linear_message">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="19dp"
            android:id="@+id/item_message_text_message"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_message_count_left"
                android:text="1"
                android:textSize="9dp"
                android:layout_margin="2dp"
                android:textColor="@android:color/holo_blue_light"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11.11.11.11"
                android:textColor="@color/gray_light"
                android:id="@+id/item_message_text_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_message_count_right"
                android:text="1"
                android:textSize="9dp"
                android:layout_margin="2dp"
                android:textColor="@android:color/holo_blue_light"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>